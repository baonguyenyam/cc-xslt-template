extends layout

block content
	section.hero.is-primary
		.container-fluid
			.hero-body
				.columns
					.column.is-three-quarters
						h1.title= title
						h2.subtitle
							| integrate into Canh Cam App 
					.column
						.is-pulled-right.columns
							.column
								button#indent.button.is-light Indent
							.column
								.select.is-pulled-right
									select#modules
										option(selected, disabled) Chọn Module
										option(value="Banner") Banner
										option(value="News") News
	.container-fluid#maincode
		.columns
			.column.is-three-quarters
				.body
					textarea#code(class="textarea is-primary" rows="20")
			.column
				.body-control
					.field
						h3.title.is-4 Thêm Elements
					.field
						select#elms.select-on
					.field
						h3.title.is-4 Thêm Attribute
					.field
						select#attrs.select-on
					.field
						h3.title.is-4 Thêm XML
					.cnt 
						.dropdown
							button.button.is-primary
								span.val xsl:if test="Title != ''
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:if test="Title != \'\' ">\n<xsl:value-of select="Title"></xsl:value-of>\n</xsl:if>')
					.field
						h3.title.is-4 Thêm giá trị
					.cnt 
						.dropdown
							button.button.is-primary
								span.val Module Title
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="/XXXList/ModuleTitle"></xsl:value-of>')
					.cnt 
						.dropdown
							button.button.is-primary
								span.val Title
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="Title"></xsl:value-of>')
					.cnt 
						.dropdown
							button.button.is-primary
								span.val EditLink
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="EditLink" disable-output-escaping="yes"></xsl:value-of>')
					.cnt 
						.dropdown
							button.button.is-primary
								span.val BriefContent
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="BriefContent" disable-output-escaping="yes"></xsl:value-of>')
					.cnt 
						.dropdown
							button.button.is-primary
								span.val Description
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="Description" disable-output-escaping="yes"></xsl:value-of>')
					.cnt 
						.dropdown
							button.button.is-primary
								span.val FullContent
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="FullContent" disable-output-escaping="yes"></xsl:value-of>')
					.cnt 
						.dropdown
							button.button.is-primary
								span.val Image
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="ImageUrl" disable-output-escaping="yes"></xsl:value-of>')
					.cnt 
						.dropdown
							button.button.is-primary
								span.val CreatedDate
								span.icon.is-small
									i.fas.fa-angle-down
						.dropdown-menu
							.dropdown-content
								.dropdown-item(data='<xsl:value-of select="CreatedDate"></xsl:value-of>')
				
					.field
						h3.title.is-4 Phím tắt 
					.field
						p Command + Left: Di chuyển tới đầu dòng code
						p Command + Ctrl + Up: Di chuyển dòng code lên trên
						p Command + D: Chọn cùng giá trị