							span.val EditLink
							span.icon.is-small
								i.fas.fa-angle-down
					.dropdown-menu
						.dropdown-content
							.dropdown-item(old-data-set, data-set='<xsl:value-of select="EditLink" disable-output-escaping="yes"></xsl:value-of>', data-comment)
				.cnt 
